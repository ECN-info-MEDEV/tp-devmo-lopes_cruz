<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_margin="20sp"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp"
        >

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/text_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_profile_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_profile_params"
        android:onClick="onProfileParamsClick" />

    <Button
        android:id="@+id/button_profile_params_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_profile_params"
        android:onClick="onProfileParamsClick" />

    <Button
        android:id="@+id/button_profile_params_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_profile_params"
        android:onClick="onProfileParamsClick" />

    <Button
        android:id="@+id/button_profile_params_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_profile_params"
        android:onClick="onProfileParamsClick" />

</LinearLayout>