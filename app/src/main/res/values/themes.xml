<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrainMatch" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary Font -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <!-- Primary Color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorHighlight</item>
        <!-- Secondary Color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background Color -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Action Bar -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <!-- Remove Ripple Effect -->
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>
    <!-- Custom Button -->
    <style name="TransparentGreenButton" parent="Widget.AppCompat.Button">
        <item name="android:titleMarginBottom">30dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semi</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!-- Custom Action Bar -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Custom Rounded image -->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>