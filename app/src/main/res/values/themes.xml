<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrainMatch" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary Font -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <!-- Primary Color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorHighlight</item>
        <!-- Secondary Color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Action Bar -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>
    <!-- Custom Action Bar -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>
    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>